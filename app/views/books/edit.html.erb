<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<%= render "layouts/error_messages", model: f.object %>

  <p>
   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Body</h4>
   <%= f.text_area :body %>
  </p>
  <p>
   <%= f.submit 'Update Book' %>
  </p>
<% end %>

<%= link_to 'show', book_path(@book) %>
